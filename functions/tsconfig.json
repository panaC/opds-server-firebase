{
  "compilerOptions": {
    "outDir": "build",
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}